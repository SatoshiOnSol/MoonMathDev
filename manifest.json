{
  "manifest_version": 3,
  "name": "MoonMath - Solana X-Gains Calculator",
  "version": "1.0.0",
  "description": "Calculate potential x-gains for Solana tokens based on market cap and supply",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://api.solana.fm/*",
    "https://api.dexscreener.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MoonMath Calculator"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}